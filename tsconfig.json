{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules",
		"typings/main.d.ts",
		"**/typings/main.d.ts",
		"typings/main",
		"**/typings/main",
		"dist",
		"**/dist"
	]
}
